urls=(
	"http://releng-distfiles.mumble.info/releng-distfiles/openssl-1.0.2e.tar.gz"
	"https://www.openssl.org/source/openssl-1.0.2e.tar.gz"
)

digests=(
	"sha1:2c5691496761cb18f98476eefa4d35c835448fb6"
	"sha256:e23ccafdb75cfcde782da0151731aa2185195ac745eea3846133f2e05c0e0bff"
)

function extract {
	tar -zxf openssl-1.0.2e.tar.gz
	cd openssl-1.0.2e
}

function build {
	mkdir -p products

	./Configure darwin-ppc-cc no-shared --prefix=${MUMBLE_PREFIX} --openssldir=${MUMBLE_PREFIX}/openssl
	make
	cp crypto/opensslconf.h products/opensslconf-ppc.h
	cp libcrypto.a products/libcrypto-ppc.a
	cp libssl.a products/libssl-ppc.a

	make clean

	./Configure darwin-i386-cc no-shared --prefix=${MUMBLE_PREFIX} --openssldir=${MUMBLE_PREFIX}/openssl
	make
	cp crypto/opensslconf.h products/opensslconf-i386.h
	cp libcrypto.a products/libcrypto-i386.a
	cp libssl.a products/libssl-i386.a
}

function install {
	make install

	cp products/opensslconf-ppc.h ${MUMBLE_PREFIX}/include/openssl/opensslconf-ppc.h
	cp products/opensslconf-i386.h ${MUMBLE_PREFIX}/include/openssl/opensslconf-i386.h
	cat > ${MUMBLE_PREFIX}/include/openssl/opensslconf.h <<EOF
// Automatically generated by the Mumble osx-universal build environment.
#if defined(i386)
# include "opensslconf-i386.h"
#elif defined(__ppc__)
# include "opensslconf-ppc.h"
#else
# error Unable to determine target architecture
#endif
EOF

	rm -f ${MUMBLE_PREFIX}/lib/libcrypto.a
	lipo -create -arch ppc products/libcrypto-ppc.a -arch i386 products/libcrypto-i386.a -output ${MUMBLE_PREFIX}/lib/libcrypto.a

	rm -f ${MUMBLE_PREFIX}/lib/libssl.a
	lipo -create -arch ppc products/libssl-ppc.a -arch i386 products/libssl-i386.a -output ${MUMBLE_PREFIX}/lib/libssl.a
}
